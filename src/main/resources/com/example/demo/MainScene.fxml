<GridPane alignment="center" hgap="10" prefHeight="720" prefWidth="1080.0" vgap="10" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.MainSceneController">
   <ButtonBar GridPane.columnIndex="1" GridPane.rowIndex="4">
      <buttons>
          <Button fx:id="buttonSales" mnemonicParsing="false" prefHeight="26.0" prefWidth="148.0" text="Ventes" />
          <Button fx:id="buttonCustomers" mnemonicParsing="false" prefHeight="26.0" prefWidth="148.0" text="Clients" />
          <Button fx:id="buttonEvents" mnemonicParsing="false" prefHeight="26.0" prefWidth="148.0" text="Evenements" />
      </buttons>
   </ButtonBar>
            <BarChart fx:id="barChartUserConnections" GridPane.columnIndex="1" GridPane.rowIndex="0">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </BarChart>
            <LineChart fx:id="lineChartTotalRevenue" GridPane.columnIndex="1" GridPane.rowIndex="1">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </LineChart>
            <PieChart fx:id="pieChartAccountTypes" GridPane.columnIndex="2" GridPane.rowIndex="0">
            </PieChart>

          <BarChart fx:id="barChartNewAccounts" GridPane.columnIndex="2" GridPane.rowIndex="1">
        <xAxis>
            <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
            <NumberAxis side="LEFT" />
        </yAxis>
    </BarChart>
   <ButtonBar GridPane.columnIndex="2" GridPane.rowIndex="4">
      <buttons>
         <Button fx:id="buttonExport" mnemonicParsing="false" text="Exporter" />
          <Button fx:id="buttonRefresh" mnemonicParsing="false" prefHeight="26.0" prefWidth="148.0" text="Actualiser" />
          <Button fx:id="buttonDisconnect" mnemonicParsing="false" prefHeight="26.0" prefWidth="148.0" text="Deconnexion" />
      </buttons>
   </ButtonBar>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
